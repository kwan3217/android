<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Takeoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Takeoff"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/TakeoffNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Now" />

                <Button
                    android:id="@+id/TakeoffSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set" />

                <TextView
                    android:id="@+id/TakeoffTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Landing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Landing"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/LandingNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Now" />

                <Button
                    android:id="@+id/LandingSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set" />

                <TextView
                    android:id="@+id/LandingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </TableRow>

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Taxi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Taxi Time"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <EditText
                        android:id="@+id/TaxiTime"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="5">

                        <requestFocus />
                    </EditText>

                    <Button
                        android:id="@+id/TaxiSet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Block Time"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/BlockTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Sortie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sortie Duration"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/SortieDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23.9"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/Victory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Victory!" />

        </TableLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>