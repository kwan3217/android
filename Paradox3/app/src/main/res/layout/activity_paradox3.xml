<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Enter clock numbers going clockwise from the top" />

    <EditText
        android:id="@+id/txtNumbers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number" >

        <requestFocus />
    </EditText>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:textColor="#ffff0000" android:id="@+id/btn1" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="1" android:layout_weight="1.0" android:onClick="clickNum"/>
        <Button android:textColor="#ffffc000" android:id="@+id/btn2" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="2" android:layout_weight="1.0" android:onClick="clickNum" />
        <Button android:textColor="#ff00c000" android:id="@+id/btn3" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="3" android:layout_weight="1.0" android:onClick="clickNum" />
        <Button android:textColor="#ff00c0c0" android:id="@+id/btn4" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="4" android:layout_weight="1.0" android:onClick="clickNum" />
        <Button android:textColor="#ffff00ff" android:id="@+id/btn5" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="5" android:layout_weight="1.0" android:onClick="clickNum" />
        <Button android:id="@+id/btn6" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="6" android:layout_weight="1.0"  android:onClick="clickNum"/>
        <Button android:id="@+id/btn7" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="7" android:layout_weight="1.0"  android:onClick="clickNum"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/btnSolve" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="Solve" android:layout_weight="1.0"  android:onClick="clickSolve"/>
        <Button android:id="@+id/btnClear" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="Clear" android:layout_weight="1.0"  android:onClick="clickClear"/>
    </LinearLayout>

    <TextView android:textAppearance="?android:textAppearanceMedium" android:id="@+id/txtSolution" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="Medium Text" />
</LinearLayout>